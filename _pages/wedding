<body>
    <h1>N&M</h1>
    <div id="countdown"></div>
    <div id="congratulations" class="congratulations">Congratulations! ðŸŽ‰ðŸŽŠ</div>

    <script>
        // Set the target date and time in UTC
        const targetDate = new Date(Date.UTC(2024, 7, 16, 11, 0, 0)).getTime(); // August 16, 2024, 11:00 AM UTC

        const countdown = document.getElementById('countdown');
        const congratulations = document.getElementById('congratulations');

        function updateCountdown() {
            const now = new Date().getTime();
            const distance = targetDate - now;

            if (distance < 0) {
                countdown.style.display = 'none';
                congratulations.style.display = 'block';
                return;
            }

            const weeks = Math.floor(distance / (1000 * 60 * 60 * 24 * 7));
            const days = Math.floor((distance % (1000 * 60 * 60 * 24 * 7)) / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            countdown.innerHTML = `
                ${weeks}w ${days}d ${hours}h ${minutes}m ${seconds}s
            `;
        }

        setInterval(updateCountdown, 1000);
    </script>
</body>
</html>
